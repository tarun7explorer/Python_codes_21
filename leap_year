#  1st method using if else

year = 2000
if( ((year % 4 == 0) and (year % 100 != 0)) or (year % 400==0) ):
    print("Leap Year")
else:
    print("Not leap Year")

# Output - Leap Year


def is_leap_year(year):
    return True if (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0) else False

year = 2000
print(f"{year} is a leap year: {is_leap_year(year)}")
